<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SkillPageFragment">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/guildwarsicon_round"/>
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/skillinfoloading"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/skillinfoerror"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:text="@string/errortext_raceinfopage"
        android:visibility="invisible"
        />
    <LinearLayout
        android:id="@+id/skillbody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:text="Skill Info"
            android:textAlignment="center"
            android:textColor="@color/page_title_text_color"
            android:textSize="30dp" />
        <LinearLayout
            android:id="@+id/skill_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/md_theme_onBackground"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/skill_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center"
                android:textColor="@color/page_title_text_color"
                android:textSize="25dp"
                android:id="@+id/skill_text"
                android:text = "Skill"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/md_theme_onBackground"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/page_title_text_color"
                android:textSize="25dp"
                android:text = "Description:"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/page_title_text_color"
                android:id="@+id/skill_description"
                android:textSize="20dp"
                android:text = "text text text text text text text text text text text text text text text text"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/md_theme_onBackground"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/page_title_text_color"
                    android:textSize="20dp"
                    android:text = "Range:"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/page_title_text_color"
                    android:textSize="20dp"
                    android:id="@+id/range_of_skill"
                    android:text = "Self"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/md_theme_onBackground"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/page_title_text_color"
                    android:textSize="20dp"
                    android:text = "Recharge Time:"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/page_title_text_color"
                    android:textSize="20dp"
                    android:id="@+id/recharge_of_skill"
                    android:text = "None"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>